@code {

    private string? searchText;
    private string? searchResult;

    private FormData formData = new FormData();
    private string? pageContent;

    private int currentCount = 0;
    private string UriString = "https://example.com";

    private void IncrementCount()
    {
        currentCount++;
    }

    private Task<string> GetHtmlContent(Uri uri)
    {
        HttpRequestQueue ms = new();
        return ms.GetHtmlContent(uri.AbsoluteUri);

    }   

    private Uri HandleUri(string? uri)
    {
        if(Uri.TryCreate(uri, UriKind.Absolute, out var result))
        {
            return result;
        }
        else
        {
            return new Uri("https://www.google.com/");
        }

    }

    private async Task PerformSearch()
    {
        //formData.Name = 
        if (!string.IsNullOrWhiteSpace(searchText))
        {
            var uri = HandleUri(searchText);
            var content = await GetHtmlContent(uri);
            searchResult = content; // new[] { content };
        }
        else
        {
            searchResult = "";
        }
    }

    public class FormData
    {
        [Required(ErrorMessage = "Name is required.")]
        [StringLength(50, ErrorMessage = "Name must be less than 50 characters.")]
        public string? Name { get; set; }
    }
}

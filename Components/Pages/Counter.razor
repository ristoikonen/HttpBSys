@page "/counter"
@using System.ComponentModel.DataAnnotations
@inject IHttpRequestQueue HttpRequestQueue
@rendermode InteractiveServer

<PageTitle>Html Content of Url</PageTitle>

<h1>HTML from an Url</h1>

<EditForm Model="@formData" OnValidSubmit="@PerformSearch">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="name">Uri:</label>
        <InputText id="name" @bind-Value="formData.Name" class="form-control" />
        <ValidationMessage For="@(() => formData.Name)" />
        <label for="name">Content:</label>
        <input @bind="searchText" @bind:event="oninput" @bind:after="PerformSearch" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</EditForm>


<p class="mt-3">Search result: @searchResult</p>



